<% layout("layouts/boilerplate") %>
<div id="cluster-map"></div>
<div class="container mt-3">
    <h1>All Campgrounds</h1>

    <% if(campgrounds[0]) {%> 
        <% for (let campground of campgrounds){ %>
            <div class="card mb-3">
                <div class="row">
                    <% if(campground.images[0].thumbnail) { %>
                    <div class="col-md-4">
                        <img class="img-fluid" src="<%=campground.images[0].url%>" alt="">
                    </div>
                    <% } else {%>
                        <img class="img-fluid" src="https://res.cloudinary.com/dv7tj0hmo/image/upload/v1617523717/YelpCamp/default_u0dkxs.jpg" alt="">
                        <% } %>   
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title"><%=campground.title%></h5>
                            <p class="card-text"><%=campground.desription%></p>
                            <p class="card-text"><small class="text-muted"><%=campground.location%></small></p>
                            <a class="btn btn-primary" href="/campgrounds/<%=campground._id%>"><%=campground.title%></a>
                        </div>
                    </div> 
                </div>
            </div>
                <% } %>
        <% } else{%> 
            <div class="card text-center">
                <div class="card-body">
                  <p class="card-text">No campgrounds found! <br>Be the first to create a campground.</p>
                  <a class="btn btn-primary" href="/campgrounds/new">Add campground</a>
                </div>
              </div>
            <% } %> 
</div>
<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>'
    const campgrounds = {features:<%-JSON.stringify(campgrounds)%>}
</script>

<script src="/scripts/clusterMap.js"></script>